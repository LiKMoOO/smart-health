<canvas wx:if="{{ !isUseNewCanvas }}" class="ec-canvas" canvas-id="{{ canvasId }}"
  bindtouchstart="{{ ec.disableTouch ? '' : 'touchStart' }}"
  bindtouchmove="{{ ec.disableTouch ? '' : 'touchMove' }}"
  bindtouchend="{{ ec.disableTouch ? '' : 'touchEnd' }}">
</canvas>
<canvas wx:else id="{{ canvasId }}" type="2d" class="ec-canvas"
  bindtouchstart="{{ ec.disableTouch ? '' : 'touchStart' }}"
  bindtouchmove="{{ ec.disableTouch ? '' : 'touchMove' }}"
  bindtouchend="{{ ec.disableTouch ? '' : 'touchEnd' }}">
</canvas> 