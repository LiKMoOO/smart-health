.main {
  width: 100%;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.top-bar {
  width: 100%;
  background-color: #fff;
  position: fixed;
  top: 0;
  z-index: 999;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  height: 90rpx;
}

.title {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
}

.nav-btn {
  display: flex;
  align-items: center;
  background-color: #f6f7fb;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #2858DF;
}

.icon {
  margin-left: 6rpx;
  font-weight: bold;
}

.content {
  margin-top: 90rpx;
  flex: 1;
  padding: 20rpx;
}

.news-list {
  width: 100%;
}

.news-item {
  width: 100%;
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.news-pic {
  width: 180rpx;
  height: 140rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.news-pic image {
  width: 100%;
  height: 100%;
}

.news-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.news-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.news-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-data-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
} 