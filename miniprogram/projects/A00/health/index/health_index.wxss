.main {
  min-height: 100vh;
  background-color: #f5f6fa;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.top-header {
  background: linear-gradient(135deg, #4168E0 0%, #2858DF 100%);
  padding: 40rpx 30rpx 80rpx;
  color: #fff;
  border-radius: 0 0 30rpx 30rpx;
  position: relative;
  z-index: 1;
  overflow: hidden;
}

.header-content {
  margin-bottom: 20rpx;
  position: relative;
  z-index: 5;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 头部装饰元素 */
.header-decoration {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  pointer-events: none;
}

.circle-1 {
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-2 {
  position: absolute;
  bottom: -50rpx;
  left: 50rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
}

/* 健康模块导航 - 降低高度，增加阴影效果，添加渐变背景 */
.module-list {
  display: flex;
  flex-wrap: wrap;
  padding: 15rpx 10rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F8FAFF 100%);
  border-radius: 15rpx;
  margin: -60rpx 20rpx 20rpx;
  position: relative;
  box-shadow: 0 8rpx 25rpx rgba(40, 88, 223, 0.15);
  width: calc(100% - 40rpx);
  z-index: 10;
}

.module-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 0;
}

.module-item:hover {
  transform: translateY(-2rpx);
  transition: all 0.3s ease;
}

.module-icon {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 8rpx;
}

.module-name {
  font-size: 24rpx;
  color: #333;
}

/* 健康数据概览 - 调整尺寸以贴合屏幕 */
.section {
  margin: 20rpx;
  padding: 25rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.08);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  display: block;
  width: 8rpx;
  height: 30rpx;
  background-color: #2858DF;
  margin-right: 10rpx;
  border-radius: 4rpx;
}

.overview-content {
  display: flex;
  justify-content: space-between;
}

.overview-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  position: relative;
}

.overview-item:not(:last-child):after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background-color: #eee;
}

.item-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.item-value {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
}

.unit {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

/* 最近健康记录 - 调整样式使其更贴合屏幕 */
.metrics-list {
  margin-top: 10rpx;
}

.metric-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.metric-item:last-child {
  border-bottom: none;
}

.metric-type {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  flex: 1;
}

.metric-value {
  font-size: 30rpx;
  color: #2858DF;
  flex: 1;
  text-align: center;
}

.metric-time {
  font-size: 24rpx;
  color: #999;
  flex: 1;
  text-align: right;
}

/* 用药提醒 - 美化样式 */
.reminder-list {
  margin-top: 10rpx;
}

.reminder-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.reminder-item:last-child {
  border-bottom: none;
}

.reminder-info {
  flex: 3;
}

.reminder-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
  font-weight: bold;
}

.reminder-desc {
  font-size: 24rpx;
  color: #999;
}

.reminder-time {
  flex: 1;
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
  text-align: right;
  background-color: rgba(255, 107, 107, 0.1);
  padding: 8rpx 15rpx;
  border-radius: 30rpx;
}

/* 空态提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  margin: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #2858DF;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}