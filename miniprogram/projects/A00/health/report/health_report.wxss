/* 报告列表样式 */
.report-list {
  flex: 1;
  padding: 30rpx 24rpx;
}

/* 空数据提示 */
.empty-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 34rpx;
  color: #666;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 报告卡片样式 */
.report-item {
  margin-bottom: 24rpx;
}

.report-card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  padding: 30rpx;
  transition: transform 0.2s;
}

.report-card:active {
  transform: scale(0.98);
}

/* 报告头部 */
.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.hospital-info {
  display: flex;
  align-items: center;
}

.hospital-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.hospital-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.report-date {
  font-size: 26rpx;
  color: #666;
  padding: 8rpx 16rpx;
  background-color: #f7f8fa;
  border-radius: 8rpx;
}

/* 报告内容 */
.report-content {
  padding: 24rpx 0;
}

.report-type-box, .report-summary-box {
  margin-bottom: 20rpx;
}

.report-type-label, .report-summary-label {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 8rpx;
  display: block;
}

.report-type-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.report-summary-value {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 报告底部 */
.report-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.report-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.normal .status-dot {
  background-color: #52c41a;
}

.warning .status-dot {
  background-color: #ff4d4f;
}

.status-text {
  font-size: 26rpx;
}

.normal .status-text {
  color: #52c41a;
}

.warning .status-text {
  color: #ff4d4f;
}

.view-detail {
  display: flex;
  align-items: center;
}

.view-detail text {
  font-size: 26rpx;
  color: #4582FE;
  margin-right: 8rpx;
}

.icon-arrow {
  width: 24rpx;
  height: 24rpx;
}

