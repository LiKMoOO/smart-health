/* 主容器 */
.main {
    padding: 0 0 120rpx;
    background: #f8f8f8;
    min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
    background: #fff;
    padding: 20rpx 30rpx;
    position: sticky;
    top: 0;
    z-index: 1;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.search-box {
    display: flex;
    align-items: center;
    background: #f5f5f5;
    border-radius: 36rpx;
    padding: 16rpx 30rpx;
}

.icon-search {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.search-box input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
}

/* 报告列表 */
.report-list {
    padding: 30rpx;
}

.no-data {
    text-align: center;
    padding: 100rpx 0;
}

.icon-empty {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 30rpx;
}

.hint {
    font-size: 28rpx;
    color: #999;
}

.report-item {
    background: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.report-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.hospital {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
}

.date {
    font-size: 26rpx;
    color: #999;
}

.report-content {
    margin-bottom: 30rpx;
}

.type {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 16rpx;
}

.summary {
    font-size: 26rpx;
    color: #999;
    line-height: 1.6;
}

.report-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1rpx solid #f0f0f0;
    padding-top: 20rpx;
}

.status {
    font-size: 26rpx;
    color: #52c41a;
    background: rgba(82,196,26,0.1);
    padding: 6rpx 20rpx;
    border-radius: 24rpx;
}

.status.warning {
    color: #faad14;
    background: rgba(250,173,20,0.1);
}

.view-detail {
    font-size: 26rpx;
    color: #1890ff;
}

/* 浮动按钮 */
.float-btn {
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
    background: #1890ff;
    color: #fff;
    display: flex;
    align-items: center;
    padding: 20rpx 40rpx;
    border-radius: 40rpx;
    box-shadow: 0 4rpx 16rpx rgba(24,144,255,0.35);
}

.icon-add {
    width: 40rpx;
    height: 40rpx;
    margin-right: 16rpx;
}

.float-btn text {
    font-size: 30rpx;
}

/* 主容器 */
.container {
  min-height: 100vh;
  background-color: #f5f6fa;
  padding-bottom: 30rpx;
}

/* 顶部标题 */
.header {
  background: linear-gradient(135deg, #3894FF 0%, #2778E3 100%);
  padding: 40rpx 30rpx;
  color: #fff;
  border-radius: 0 0 30rpx 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 上传按钮 */
.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 20rpx;
  padding: 25rpx 0;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.08);
  color: #3894FF;
}

.btn-text {
  font-size: 30rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  margin: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.05);
}

.empty-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #3894FF;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 85%;
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 25rpx;
  flex: 1;
  overflow-y: auto;
}

.modal-footer {
  padding: 20rpx 25rpx;
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f0f0f0;
}

/* 表单样式 */
.form-group {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input, .picker, .form-textarea, .file-selector {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
}

.picker {
  display: flex;
  align-items: center;
}

.form-textarea {
  height: 160rpx;
  padding: 20rpx;
  line-height: 1.5;
}

.file-selector {
  display: flex;
  align-items: center;
}

.file-placeholder {
  color: #999;
}

.btn-cancel, .btn-save, .btn-ok {
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-save, .btn-ok {
  background-color: #3894FF;
  color: #fff;
}

/* 异常项目分析 */
.abnormal-list {
  width: 100%;
}

.abnormal-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.abnormal-item:last-child {
  border-bottom: none;
}

.abnormal-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.category {
  font-size: 24rpx;
  color: #fff;
  background-color: #3894FF;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
  margin-right: 15rpx;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.abnormal-value {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
  margin: 10rpx 0;
}

.abnormal-analysis {
  font-size: 26rpx;
  color: #FF6B6B;
  background-color: rgba(255, 107, 107, 0.1);
  padding: 15rpx;
  border-radius: 8rpx;
  line-height: 1.5;
} 