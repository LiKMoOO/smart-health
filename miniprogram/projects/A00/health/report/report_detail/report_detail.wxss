/* 统一详情页样式，直接复用health_report.wxss内容 */
@import '../../health_report.wxss';

page {
  --primary-color: #0080ff;
  --bg-color: #f5f7fa;
  --text-color: #333;
  --text-secondary: #666;
  --border-color: #eee;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #f5222d;
  --low-risk-color: #52c41a; /* 低风险 - 绿色 */
  --medium-risk-color: #faad14; /* 中风险 - 黄色 */
  --high-risk-color: #f5222d; /* 高风险 - 红色 */
  --ai-bg-color: #f0f7ff; /* AI分析背景色 - 浅蓝色 */
}

.main {
  background-color: var(--bg-color);
  min-height: 100vh;
  padding-bottom: 180rpx;
}

.top-bar {
  background-color: var(--primary-color);
  padding: 30rpx;
  color: #fff;
  text-align: center;
}

.top-bar .title {
  font-size: 36rpx;
  font-weight: bold;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: var(--text-secondary);
}

.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.icon-empty {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.hint {
  color: var(--text-secondary);
  font-size: 30rpx;
}

/* 报告头部 */
.report-header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  margin: 20rpx;
}

.hospital {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.date {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 报告内容 */
.report-content {
  padding: 0 20rpx;
}

/* 报告章节 */
.section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title-text {
  display: flex;
  align-items: center;
}

.title-icon {
  margin-right: 10rpx;
  font-size: 36rpx;
}

.toggle-icon {
  font-size: 26rpx;
  color: var(--primary-color);
}

.summary {
  font-size: 30rpx;
  line-height: 1.6;
  color: var(--text-color);
}

/* 信息行 */
.info-row {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1px solid var(--border-color);
}

.info-row:last-child {
  border-bottom: none;
}

.info-row .label {
  width: 180rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.info-row .value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

/* AI分析部分 */
.ai-section {
  background-color: var(--ai-bg-color);
  transition: all 0.3s ease;
}

.ai-section.expanded {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.ai-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.5s ease;
  opacity: 0;
}

.ai-content.show {
  max-height: 2000rpx; /* 足够大的值以容纳内容 */
  opacity: 1;
  transition: max-height 0.5s ease, opacity 0.3s ease 0.2s;
}

.ai-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.ai-risk {
  display: flex;
  align-items: center;
}

.risk-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.risk-value {
  font-size: 32rpx;
  font-weight: bold;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  margin-left: 10rpx;
}

.risk-value.low {
  color: var(--low-risk-color);
  background-color: rgba(82, 196, 26, 0.1);
}

.risk-value.medium {
  color: var(--medium-risk-color);
  background-color: rgba(250, 173, 20, 0.1);
}

.risk-value.high {
  color: var(--high-risk-color);
  background-color: rgba(245, 34, 45, 0.1);
}

.ai-time {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.ai-suggestion, .ai-details {
  margin-bottom: 20rpx;
  background-color: rgba(255, 255, 255, 0.6);
  padding: 20rpx;
  border-radius: 8rpx;
}

.suggestion-title, .details-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
  border-left: 6rpx solid var(--primary-color);
  padding-left: 10rpx;
}

.suggestion-content, .details-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-color);
  white-space: pre-wrap;
}

/* 报告项目 */
.item-group {
  margin-bottom: 30rpx;
}

.item-group:last-child {
  margin-bottom: 0;
}

.group-name {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
  background-color: rgba(0, 128, 255, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
}

.item-list {
  padding-left: 20rpx;
}

.item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.item:last-child {
  border-bottom: none;
}

.item-name {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.item-value {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 6rpx;
}

.item-value.abnormal {
  color: var(--error-color);
}

.abnormal-mark {
  font-size: 24rpx;
  color: var(--error-color);
  margin-left: 8rpx;
}

.item-range {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 按钮部分 */
.report-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-primary, .btn-default {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.btn-primary {
  background-color: var(--primary-color);
  color: #fff;
}

.btn-default {
  background-color: #fff;
  color: var(--primary-color);
  border: 1rpx solid var(--primary-color);
}

.btn-default.analyzing {
  color: var(--text-secondary);
  border-color: var(--border-color);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 分析中动画 */
.analyzing-animation {
  display: flex;
  align-items: center;
  margin-right: 10rpx;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: var(--text-secondary);
  margin: 0 4rpx;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}