page {
  --primary-color: #0080ff;
  --bg-color: #f5f7fa;
  --text-color: #333;
  --text-secondary: #666;
  --border-color: #eee;
  --abnormal-color: #ff4d4f;
  --low-risk-color: #52c41a;
  --medium-risk-color: #faad14;
  --high-risk-color: #ff4d4f;
}

.main {
  min-height: 100vh;
  background-color: #f5f6fa;
  padding-bottom: 100rpx;
}

.top-bar {
  background-color: #3894FF;
  padding: 40rpx 30rpx;
  color: #fff;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 0 0 30rpx 30rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3894FF;
  border-radius: 50%;
  margin-bottom: 30rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  margin: 30rpx 20rpx;
}

.icon-no-data image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.text-no-data {
  font-size: 30rpx;
  color: #999;
}

/* 报告头部 */
.report-header {
  background-color: #fff;
  margin: 30rpx 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.05);
}

.report-type {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.report-date {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.report-hospital {
  font-size: 28rpx;
  color: #666;
}

/* 报告章节 */
.report-section {
  background-color: #fff;
  margin: 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.deepseek-tag {
  font-size: 22rpx;
  background-color: #6366F1;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
  font-weight: normal;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 检测项目 */
.item-category {
  margin-bottom: 30rpx;
}

.category-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #3894FF;
}

.item-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(340rpx, 1fr));
  gap: 20rpx;
}

.test-item {
  background-color: #f9f9fb;
  padding: 20rpx;
  border-radius: 10rpx;
  position: relative;
}

.test-item.abnormal {
  background-color: #fff9f9;
  border: 1rpx solid #fff0f0;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.item-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.item-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 5rpx;
  font-weight: normal;
}

.item-range {
  font-size: 24rpx;
  color: #999;
}

.item-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #f44336;
  background-color: #ffebee;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* AI分析 */
.ai-section {
  background-color: #f8faff;
  border: 1rpx solid #e5eaff;
}

.ai-analysis {
  position: relative;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.ai-risk-badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
  margin-bottom: 15rpx;
}

.risk-low {
  background-color: #4caf50;
}

.risk-medium {
  background-color: #ff9800;
}

.risk-high {
  background-color: #f44336;
}

.ai-suggestion {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.ai-more {
  font-size: 26rpx;
  color: #3894FF;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.ai-more .arrow {
  margin-left: 5rpx;
}

/* 按钮 */
.btn-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin: 40rpx 20rpx;
}

.btn-primary {
  background-color: #3894FF;
  color: #fff;
  border-radius: 50rpx;
  padding: 25rpx 0;
  font-size: 32rpx;
  box-shadow: 0 5rpx 20rpx rgba(56, 148, 255, 0.3);
}

.btn-default {
  background-color: #fff;
  color: #3894FF;
  border: 1rpx solid #3894FF;
  border-radius: 50rpx;
  padding: 25rpx 0;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-disabled {
  opacity: 0.6;
}

.btn-icon {
  margin-right: 10rpx;
}

.ai-icon {
  background-color: #3894FF;
  color: #fff;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 85%;
  max-height: 85vh;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  z-index: 1000;
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f2f5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  padding: 20rpx 30rpx 30rpx;
  border-top: 1rpx solid #f0f2f5;
}

.btn-close {
  background-color: #f7f7f7;
  color: #666;
  border-radius: 50rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
}

/* AI分析结果 */
.ai-result-section {
  margin-bottom: 30rpx;
}

.ai-result-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.ai-risk-tag {
  font-size: 24rpx;
  color: #fff;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

.ai-result-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.ai-details {
  white-space: pre-wrap;
  background-color: #f9f9fb;
  padding: 20rpx;
  border-radius: 10rpx;
} 