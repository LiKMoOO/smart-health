/* 统一详情页样式，直接复用health_report.wxss内容 */
@import '../../health_report.wxss';

page {
  --primary-color: #0080ff;
  --bg-color: #f5f7fa;
  --text-color: #333;
  --text-secondary: #666;
  --border-color: #eee;
  --abnormal-color: #ff4d4f;
  --low-risk-color: #52c41a;
  --medium-risk-color: #faad14;
  --high-risk-color: #ff4d4f;
}

.main {
  background-color: var(--bg-color);
  min-height: 100vh;
  padding-bottom: 100rpx;
}

.top-bar {
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid var(--border-color);
}

.top-bar .title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.icon-no-data image {
  width: 200rpx;
  height: 200rpx;
}

.text-no-data {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: var(--text-secondary);
}

/* 报告头部 */
.report-header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.report-type {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.report-date {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.report-hospital {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 报告章节 */
.report-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.section-content {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
}

/* 检测项目 */
.item-category {
  margin-bottom: 30rpx;
}

.item-category:last-child {
  margin-bottom: 0;
}

.category-name {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

.item-list {
  border-left: 4rpx solid var(--border-color);
  padding-left: 20rpx;
}

.test-item {
  padding: 20rpx;
  margin-bottom: 16rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  position: relative;
}

.test-item.abnormal {
  background-color: rgba(255, 77, 79, 0.05);
  border-left: 4rpx solid var(--abnormal-color);
  margin-left: -24rpx;
  padding-left: 20rpx;
}

.item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.item-value {
  font-size: 32rpx;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.item-unit {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-left: 4rpx;
}

.item-range {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.item-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: var(--abnormal-color);
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 30rpx;
}

/* AI分析 */
.ai-analysis {
  background-color: #f0f7ff;
  border-radius: 8rpx;
  padding: 20rpx;
}

.ai-suggestion {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.ai-risk {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.ai-risk .label {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.ai-risk .value {
  font-size: 26rpx;
  font-weight: bold;
}

.ai-risk .value.high {
  color: var(--high-risk-color);
}

.ai-risk .value.medium {
  color: var(--medium-risk-color);
}

.ai-risk .value.low {
  color: var(--low-risk-color);
}

.ai-more {
  font-size: 24rpx;
  color: var(--primary-color);
  text-align: right;
}

/* 按钮 */
.btn-group {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}

.btn-primary {
  flex: 1;
  background-color: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.btn-default {
  flex: 1;
  background-color: #fff;
  color: var(--primary-color);
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  border: 1rpx solid var(--primary-color);
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: relative;
  width: 90%;
  max-height: 90vh;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1001;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
}

.modal-close {
  font-size: 40rpx;
  color: var(--text-secondary);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-body {
  padding: 30rpx;
  overflow-y: auto;
  max-height: calc(90vh - 200rpx);
}

.ai-result-section {
  margin-bottom: 30rpx;
}

.ai-result-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.ai-result-content {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
}

.ai-risk-level {
  font-size: 28rpx;
  font-weight: bold;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  display: inline-block;
}

.ai-risk-level.high {
  background-color: rgba(255, 77, 79, 0.1);
  color: var(--high-risk-color);
}

.ai-risk-level.medium {
  background-color: rgba(250, 173, 20, 0.1);
  color: var(--medium-risk-color);
}

.ai-risk-level.low {
  background-color: rgba(82, 196, 26, 0.1);
  color: var(--low-risk-color);
}

.ai-details {
  white-space: pre-wrap;
}

.modal-footer {
  padding: 20rpx 30rpx 30rpx;
  display: flex;
  justify-content: center;
}

.btn-close {
  background-color: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  width: 100%;
} 