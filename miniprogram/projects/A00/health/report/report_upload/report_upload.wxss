page {
  --primary-color: #0080ff;
  --bg-color: #f5f7fa;
  --text-color: #333;
  --text-secondary: #666;
  --border-color: #eee;
}

.main {
  padding: 0 0 100rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
}

.top-bar {
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid var(--border-color);
}

.top-bar .title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}

.form-box {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.form-group {
  position: relative;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.form-group:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.form-input {
  font-size: 32rpx;
  color: var(--text-color);
  width: 100%;
  padding: 10rpx 0;
}

.form-textarea {
  font-size: 32rpx;
  color: var(--text-color);
  width: 100%;
  min-height: 180rpx;
  padding: 10rpx 0;
}

.icon-arrow {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.icon-right {
  color: #ccc;
  font-weight: bold;
}

.file-upload-box {
  margin-top: 10rpx;
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 48rpx;
  color: #ccc;
  font-weight: bold;
}

.upload-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 10rpx;
}

.uploaded-file {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.file-name {
  font-size: 28rpx;
  color: var(--text-color);
  max-width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-actions {
  display: flex;
  align-items: center;
}

.file-status {
  font-size: 24rpx;
  color: var(--primary-color);
  margin-right: 20rpx;
}

.file-delete {
  font-size: 24rpx;
  color: #ff4d4f;
  padding: 4rpx 12rpx;
  border: 1px solid #ff4d4f;
  border-radius: 8rpx;
}

.btn-submit-wrap {
  padding: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-submit {
  background-color: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: 12rpx;
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
}

/* 上传设置样式 */
.upload-options {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.option-item.active {
  background-color: #e6f7ff;
  border-color: var(--primary-color);
}

.option-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 多文件上传样式 */
.multi-upload-box {
  margin-top: 10rpx;
}

.file-list {
  margin-bottom: 20rpx;
}

.file-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  background-color: #f9f9f9;
}

.add-file-btn {
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* OCR结果样式 */
.ocr-result {
  font-size: 28rpx;
  color: var(--text-color);
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
  max-height: 300rpx;
  overflow-y: auto;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 文件预览弹窗样式 */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.9);
  z-index: 999;
  display: flex;
  flex-direction: column;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.7);
}

.close-btn {
  font-size: 40rpx;
  color: #fff;
  padding: 0 20rpx;
}

.preview-content {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.preview-image {
  max-width: 100%;
  max-height: 100%;
}

.preview-footer {
  padding: 30rpx;
  display: flex;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.7);
}

.btn-continue {
  background-color: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  padding: 15rpx 60rpx;
  border-radius: 40rpx;
  text-align: center;
} 