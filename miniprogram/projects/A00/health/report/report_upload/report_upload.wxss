page {
  --primary-color: #3894FF;
  --bg-color: #f5f6fa;
  --text-color: #333;
  --text-secondary: #666;
  --border-color: #eaeaea;
}

.main {
  padding: 0 0 100rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.top-bar {
  background-color: var(--primary-color);
  color: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 0 0 30rpx 30rpx;
}

.form-box {
  margin: 30rpx 25rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
  position: relative;
}

.form-label {
  font-size: 30rpx;
  color: var(--text-color);
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-input {
  padding: 25rpx;
  background-color: #f7f9fc;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: var(--text-color);
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 25rpx;
  background-color: #f7f9fc;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: var(--text-color);
}

.icon-arrow {
  position: absolute;
  right: 25rpx;
  bottom: 25rpx;
  color: #999;
}

.icon-right {
  color: #ccc;
  font-weight: bold;
}

.file-upload-box {
  background-color: #f7f9fc;
  border-radius: 10rpx;
  padding: 40rpx 30rpx;
  text-align: center;
}

.upload-placeholder {
  color: #999;
}

.upload-icon {
  font-size: 80rpx;
  font-weight: 200;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 28rpx;
}

.uploaded-file {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.file-name {
  font-size: 28rpx;
  color: var(--primary-color);
  word-break: break-all;
}

.file-status {
  font-size: 26rpx;
  color: #4caf50;
}

/* AI分析开关样式 */
.switch-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-group .form-label {
  margin-bottom: 0;
}

.switch-box {
  display: flex;
  align-items: center;
}

.ai-tips {
  background-color: #e0eaff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.ai-tips text {
  font-size: 26rpx;
  color: #506690;
  line-height: 1.5;
}

.btn-submit-wrap {
  padding: 30rpx 30rpx 60rpx;
}

.btn-submit {
  background-color: var(--primary-color);
  color: #fff;
  padding: 25rpx 0;
  font-size: 32rpx;
  border-radius: 50rpx;
  box-shadow: 0 5rpx 20rpx rgba(56, 148, 255, 0.3);
} 