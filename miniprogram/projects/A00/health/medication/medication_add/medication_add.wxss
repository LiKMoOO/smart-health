/* 主容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f6f7fb;
  padding-bottom: 40rpx;
  box-sizing: border-box;
  position: relative;
}

/* 顶部标题 */
.header {
  background: linear-gradient(135deg, #3894FF 0%, #2778E3 100%);
  padding: 40rpx 30rpx;
  color: #fff;
  border-radius: 0 0 30rpx 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 表单容器 */
.form-container {
  padding: 30rpx;
}

/* 表单组 */
.form-group {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.form-label.required::before {
  content: '*';
  color: #f5222d;
  margin-right: 6rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 弹性行布局 */
.flex-row {
  display: flex;
  justify-content: space-between;
}

.form-col {
  flex: 1;
}

.form-col:first-child {
  margin-right: 20rpx;
}

/* 选择器样式 */
.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  flex-direction: row;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 60rpx;
  padding: 10rpx 0;
}

.radio-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
  color: #999;
}

.radio-item.active .radio-icon {
  color: #3894FF;
}

.radio-text {
  font-size: 28rpx;
  color: #333;
}

/* 时间选择组 */
.time-picker-group {
  width: 100%;
}

.time-list {
  display: flex;
  flex-wrap: wrap;
}

.time-item {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  margin: 0 20rpx 20rpx 0;
}

.time-value {
  font-size: 28rpx;
  color: #333;
  margin-right: 16rpx;
}

.time-delete {
  font-size: 28rpx;
  color: #f5222d;
}

.delete-icon {
  font-size: 32rpx;
}

.time-add {
  display: flex;
  align-items: center;
  background-color: rgba(56, 148, 255, 0.1);
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  margin: 0 20rpx 20rpx 0;
  color: #3894FF;
}

.add-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

/* 日期选择组 */
.date-picker-group {
  display: flex;
  align-items: center;
}

.date-picker {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.date-separator {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 按钮组 */
.form-btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn-cancel, .btn-submit {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  font-size: 30rpx;
}

.btn-cancel {
  background-color: #f0f0f0;
  color: #666;
  margin-right: 20rpx;
}

.btn-submit {
  background-color: #3894FF;
  color: #fff;
}

/* 时间选择弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  z-index: 1000;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 24rpx;
}

.modal-footer {
  padding: 24rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: flex-end;
}

.btn-confirm {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #3894FF;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* picker-view样式 */
.picker-item {
  line-height: 50px;
  text-align: center;
  font-size: 30rpx;
} 