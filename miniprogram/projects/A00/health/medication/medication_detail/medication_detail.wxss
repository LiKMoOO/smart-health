/* projects/A00/health/medication/medication_detail/medication_detail.wxss */

page {
  background-color: #f6f7f9;
}

.container {
  width: 100%;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 加载样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 6rpx solid #e0e0e0;
  border-top-color: #2c7ef9;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 详情卡片 */
.detail-card {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.medication-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-1 {
  background-color: #e6f3ff;
  color: #2c7ef9;
}

.status-0 {
  background-color: #e6f8ef;
  color: #00b578;
}

.status-2 {
  background-color: #fff3e6;
  color: #ff9f0a;
}

/* 卡片内容区块 */
.card-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.info-item {
  display: flex;
  margin-bottom: 12rpx;
}

.info-label {
  width: 160rpx;
  color: #666;
  font-size: 28rpx;
}

.info-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

/* 提醒时间 */
.reminder-times {
  display: flex;
  flex-wrap: wrap;
}

.time-item {
  padding: 8rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
}

/* 备注信息 */
.notes-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
}

/* 状态管理按钮 */
.action-card {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.action-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.action-btn-group {
  display: flex;
  justify-content: space-between;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 30rpx 0;
  border-radius: 12rpx;
}

.pause-btn {
  background-color: #fff3e6;
  color: #ff9f0a;
}

.complete-btn {
  background-color: #e6f8ef;
  color: #00b578;
}

.resume-btn {
  background-color: #e6f3ff;
  color: #2c7ef9;
}

.action-btn-group .action-btn {
  width: 48%;
}

.btn-icon {
  height: 40rpx;
  width: 40rpx;
  margin-bottom: 12rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 底部按钮 */
.footer-btns {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
}

.footer-btn {
  width: 45%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.edit-btn {
  background-color: #2c7ef9;
  color: white;
}

.delete-btn {
  background-color: white;
  color: #ff3b30;
  border: 2rpx solid #ff3b30;
}

/* 空状态样式 */
.empty-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #999;
}