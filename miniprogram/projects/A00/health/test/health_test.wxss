.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  padding: 20rpx 0;
}

.test-buttons {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.button-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #4285f4;
  padding-left: 20rpx;
}

.btn-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn {
  background-color: #4285f4;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 16rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 5rpx rgba(66, 133, 244, 0.2);
}

.btn-warn {
  background-color: #ff6b6b;
  box-shadow: 0 2rpx 5rpx rgba(255, 107, 107, 0.2);
}

.btn-clear {
  background-color: #9e9e9e;
  box-shadow: 0 2rpx 5rpx rgba(158, 158, 158, 0.2);
}

.clear-btn {
  margin-top: 30rpx;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-text {
  color: #666;
  font-size: 28rpx;
}

.test-results {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.results-empty {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}

.result-item {
  margin-bottom: 30rpx;
  border-bottom: 1px solid #eee;
  padding-bottom: 30rpx;
}

.result-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.result-data {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
  white-space: pre-wrap;
  font-family: Consolas, Monaco, monospace;
} 