.main {
  min-height: 100vh;
  background-color: #f5f6fa;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 页面标题区域 */
.top-header {
  background: linear-gradient(135deg, #4168E0 0%, #2858DF 100%);
  padding: 40rpx 30rpx 80rpx;
  color: #fff;
  border-radius: 0 0 30rpx 30rpx;
  position: relative;
  z-index: 1;
  overflow: hidden;
}

.header-content {
  margin-bottom: 20rpx;
  position: relative;
  z-index: 5;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 头部装饰元素 */
.header-decoration {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  pointer-events: none;
}

.circle-1 {
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-2 {
  position: absolute;
  bottom: -50rpx;
  left: 50rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 15rpx;
  margin: 20rpx;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  width: calc(100% - 40rpx);
}

/* 第一个卡片上移，遮挡部分顶部区域 */
.basic-info {
  margin-top: -60rpx;
  z-index: 10;
  position: relative;
}

.card-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
}

.title-text::before {
  content: '';
  display: block;
  width: 8rpx;
  height: 30rpx;
  background-color: #2858DF;
  margin-right: 10rpx;
  border-radius: 4rpx;
}

.edit-btn, .add-btn {
  font-size: 26rpx;
  color: #2858DF;
  display: flex;
  align-items: center;
}

.icon-edit, .icon-add, .icon-delete {
  margin-right: 5rpx;
}

.card-content {
  padding: 25rpx;
}

/* 基本信息 */
.info-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  color: #666;
  font-size: 28rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
}

/* 编辑表单 */
.card-edit {
  padding: 25rpx;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input, .picker, .form-textarea {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
}

.picker {
  display: flex;
  align-items: center;
}

.form-textarea {
  height: 160rpx;
  padding: 20rpx;
  line-height: 1.5;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 30rpx;
}

.btn-cancel, .btn-save {
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-save {
  background-color: #2858DF;
  color: #fff;
}

/* 既往病史列表 */
.history-list {
  width: 100%;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
}

.history-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.history-date, .history-notes {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

.history-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 15rpx;
  margin: 5rpx 0;
  border-radius: 30rpx;
  text-align: center;
}

.action-btn.edit {
  color: #2858DF;
  background-color: rgba(40, 88, 223, 0.1);
}

.action-btn.delete {
  color: #ff6b6b;
  background-color: rgba(255, 107, 107, 0.1);
}

/* 过敏史列表 */
.allergy-list {
  display: flex;
  flex-wrap: wrap;
}

.allergy-item {
  background-color: #f5f6fa;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin: 10rpx;
  font-size: 26rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.delete-btn {
  margin-left: 10rpx;
  color: #ff6b6b;
}

/* 空态提示 */
.empty-tip {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 80%;
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
}

.modal-header {
  padding: 25rpx;
  font-size: 30rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 25rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  padding: 25rpx;
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f0f0f0;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #2858DF;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}