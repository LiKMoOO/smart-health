.main {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f7f7;
}

.top-bar {
  background-color: #2858DF;
  color: white;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.chat-container {
  flex: 1;
  padding: 20rpx;
  overflow-y: scroll;
}

.chat-list {
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}

.chat-item {
  display: flex;
  margin-bottom: 30rpx;
  max-width: 90%;
}

.chat-item-user {
  flex-direction: row-reverse;
  align-self: flex-end;
}

.chat-item-ai {
  align-self: flex-start;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 10rpx;
  flex-shrink: 0;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.content {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  position: relative;
  word-break: break-all;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.chat-item-user .content {
  background-color: #2858DF;
  color: white;
}

.chat-item-ai .content {
  background-color: white;
  color: #333;
}

.loading {
  align-self: center;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: #f0f0f0;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #888;
}

.input-container {
  padding: 20rpx;
  background-color: white;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  position: relative;
  box-sizing: border-box;
  width: 100%;
}

.input-area {
  flex: 1;
  background-color: #f7f7f7;
  border-radius: 36rpx;
  padding: 15rpx 25rpx;
  margin-right: 20rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.input {
  width: 100%;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  background-color: #ddd;
  border-radius: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  flex-shrink: 0;
}

.send-btn.active {
  background-color: #2858DF;
}

.send-text {
  font-size: 32rpx;
}

.hint-container {
  padding: 20rpx;
  background-color: white;
  border-top: 1rpx solid #eee;
}

.hint-title {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.hint-items {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.hint-item {
  margin-bottom: 20rpx;
  padding: 15rpx 20rpx;
  background-color: #f7f7f7;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #555;
  flex-basis: 48%;
  box-sizing: border-box;
} 